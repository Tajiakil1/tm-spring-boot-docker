pipeline {
  environment {
    PROJECT = "sandbox-io-289003"
    APP_NAME = "Taj-App-1"
    FE_SVC_NAME = "${APP_NAME}-frontend"
    CLUSTER = "jenkins-cd"
    CLUSTER_ZONE = "us-east1-d"
    IMAGE_TAG = "gcr.io/${PROJECT}/${APP_NAME}:${env.BRANCH_NAME}.${env.BUILD_NUMBER}"
    JENKINS_CRED = "${PROJECT}"
  }

  agent {
    kubernetes {
      label 'taj-agent'
      defaultContainer 'jnlp'
      yaml """
      apiVersion: v1
      kind: Pod
      metadata:
        labels:
          components: ci
      spec:
        serviceAccountName: cd-jenkins
        containers:
        - name: ubuntu
          image: ubuntu 
          command:
          - cat
          tty: true
        - name: img
          image: http://r.j3ss.co/img
          command:
          - cat
          tty: true
        - name: python
          image: python:3
          command:
          - cat
          tty: true
      """
    }
  }

stages {
    stage('Comp') {
       steps {
        container('ubuntu') {
          sh "echo ${IMAGE_TAG}"
          }
        }
      }
    }

    stage('Deployment') {
       steps {
        container('python') {
          sh "pip list"
        }
      }
    }
 } 